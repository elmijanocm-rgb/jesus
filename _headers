# Headers for GitHub Pages PWA
/*
  # Security headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
  # PWA headers - DESHABILITADO para evitar bucles
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Specific headers for HTML files - NO CACHE
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  
# Specific headers for Service Worker - DESHABILITADO
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  
# Specific headers for manifest
/manifest.json
  Content-Type: application/manifest+json
  Cache-Control: public, max-age=86400
  
# Specific headers for icons
/*.png
  Cache-Control: public, max-age=31536000, immutable
  
# Specific headers for CSS and JS - NO CACHE para evitar bucles
/*.css
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  
/*.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
